<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LinerCalc">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtRes"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="0"
        android:gravity="end"
        android:padding="5dp"
        android:textSize="60dp"
        />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn7"
            android:text="7"
            android:textAlignment="center"
            android:textSize="60dp"

            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            />
        <Button
            android:id="@+id/btn8"
            android:text="8"
            android:textAlignment="center"
            android:textSize="60dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/btn9"
            android:text="9"
            android:textAlignment="center"
            android:textSize="60dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn4"
            android:text="4"
            android:textAlignment="center"
            android:textSize="60dp"

            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            />
        <Button
            android:id="@+id/btn5"
            android:text="5"
            android:textAlignment="center"
            android:textSize="60dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/btn6"
            android:text="6"
            android:textAlignment="center"
            android:textSize="60dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn1"
            android:text="1"
            android:textAlignment="center"
            android:textSize="60dp"

            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            />
        <Button
            android:id="@+id/btn2"
            android:text="2"
            android:textAlignment="center"
            android:textSize="60dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"/>
        <Button
            android:id="@+id/btn3"
            android:text="3"
            android:textAlignment="center"
            android:textSize="60dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn0"
            android:text="0"
            android:textAlignment="center"
            android:textSize="60dp"

            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="80dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            />

        <Button
            android:id="@+id/btnDot"
            android:text="."
            android:textAlignment="center"
            android:textSize="60dp"
            android:textColor="@color/colorPrimary"
            android:background="@color/colorButton"
            android:layout_margin="10dp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"/>


    </LinearLayout>

</LinearLayout>